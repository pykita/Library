<Window x:Class="Library.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditUser" Height="445" Width="527">
    <Grid Margin="0,0,-8,-3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnEditUser"  Content="Edit" HorizontalAlignment="Left" Margin="65,237,0,0" VerticalAlignment="Top" Width="75" Click="btnEditUser_Click"/>
        <Button x:Name="btnCancel"  Content="Cancel" HorizontalAlignment="Left" Margin="201,237,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="65,31,0,0" VerticalAlignment="Top"/>
        <Label Content="Second Name" HorizontalAlignment="Left" Margin="65,73,0,0" VerticalAlignment="Top"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="65,114,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEditName"  HorizontalAlignment="Left" Height="23" Margin="156,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtEditSecond"  HorizontalAlignment="Left" Height="23" Margin="156,73,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtEditPhone"  HorizontalAlignment="Left" Height="23" Margin="156,114,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtEditAdress"  HorizontalAlignment="Left" Height="23" Margin="156,154,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Adress" HorizontalAlignment="Left" Margin="65,154,0,0" VerticalAlignment="Top"/>
        <ListView HorizontalAlignment="Left" Height="100" Margin="352,80,0,0" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="2" Name="ListUserBook">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
