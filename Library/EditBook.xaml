<Window x:Class="Library.EditBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditBook" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="169,198,0,0" VerticalAlignment="Top" Width="75" Click="btnEdit_Click"/>
        <TextBox x:Name="txtBookName" HorizontalAlignment="Left" Height="23" Margin="73,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"  SpellCheck.IsEnabled="True"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="20,55,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="20,198,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <TextBox x:Name="txtAuthorName" HorizontalAlignment="Left" Height="23" Margin="73,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="171" />
        <Label Content="Author" HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
