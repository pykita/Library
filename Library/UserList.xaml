<Window x:Class="Library.UserList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserList" Height="325" Width="828">
    <Grid Margin="0,0,-2,-14" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.184"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <DataGrid x:Name="DgUser" HorizontalAlignment="Left" Margin="-1,2,0,0" 
                  VerticalAlignment="Top" Height="290"  
                  ItemsSource="{Binding}" AutoGenerateColumns="False"
                  CanUserAddRows="False" CanUserDeleteRows="False" Width="696" RenderTransformOrigin="0.5,0.5">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.414"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn  IsReadOnly="True" Header="Adress" Binding="{Binding Path=Adress}" Width="80"/>
                <DataGridTextColumn  IsReadOnly="True" Header="Phone Number" Binding="{Binding Path=PhoneNumber}" Width="100"/>
                <DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding CreatedDate, StringFormat=\{0:dd.MM.yyyy\}}"  Width="80"/>
                <DataGridTextColumn IsReadOnly="True" Header="Second Name" Binding="{Binding Path=SecondName}"  Width="100"/>
                <DataGridTextColumn IsReadOnly="True" Header="Name" Binding="{Binding Path=Name}"  Width="260"/>
                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="EditBook_Click">Details</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="DeleteBook_Click">Delete</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Menu" HorizontalAlignment="Left" Margin="703,250,0,0" VerticalAlignment="Top" Width="96" Height="34" Click="Button_Click"/>
        <Button Content="Add User" HorizontalAlignment="Left" Margin="703,19,0,0" VerticalAlignment="Top" Width="96" Height="35" Click="Button_Click_1"/>
    </Grid>
</Window>

